<div class="container">
	<p class="lead">Hi {{user.name.first}}, these are your settings and <a href="{{user.url}}">profile details</a></p>

	<form class="form-horizontal" method="post" enctype="multipart/form-data" autocomplete="off" novalidate>
		<input type="hidden" name="action" value="profile.details">
		
		<h3>Private Info</h3>
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Name</label>
			<div class="col-sm-10">
				<div class="form-row">
					<div class="col-xs-6">
						<input type="text" name="name.first" value="{{user.name.first}}" class="form-control">
					</div>
					<div class="col-xs-6">
						<input type="text" name="name.last" value="{{user.name.last}}" class="form-control">
					</div>
				</div>
			</div>
		</div>

		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Email</label>
			<div class="col-sm-10">
				<input type="email" name="email" value="{{user.email}}" class="form-control">
			</div>
		</div>

		<h3>Your Services</h3>

		<p class="help-block">
			You can authenticate yourself on this website with any of the services you connect. When connected, links to your Twitter and Github will be displayed on your profile.
		</p>
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Facebook</label>
			<div class="col-sm-10">
				{{#if user.services.facebook.isConfigured}}
					Your account is connected. 
					<a href="?disconnect=facebook" title="Revoke authorization of your Facebook account">Disconnect</a>
				{{else}}
					<a class="btn btn-social btn-facebook" href="/auth/facebook?target=/me" role="button">
						<span class="fa fa-facebook"></span>
						Sign in with Facebook
					</a>
				{{/if}}
			</div>
		</div>
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Github</label>
			<div class="col-sm-10">
				{{#if user.services.github.isConfigured}}
					Your account is connected.
					<a href="?disconnect=github" title="Revoke authorization of your GitHub account">Disconnect</a>
				{{else}}
					<a class="btn btn-social btn-github" href="/auth/github?target=/me" role="button">
						<span class="fa fa-github"></span>
						Sign in with GitHub
					</a>
				{{/if}}
			</div>
		</div>
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Twitter</label>
			<div class="col-sm-10">
				{{#if user.services.twitter.isConfigured}}
					Your account is connected.
					<a href="?disconnect=twitter" title="Revoke authorization of your Twitter account">Disconnect</a>
				{{else}}
					<a class="btn btn-social btn-twitter" href="/auth/twitter?target=/me" role="button">
						<span class="fa fa-twitter"></span>
						Sign in with Twitter
					</a>
				{{/if}}
			</div>
		</div>
		
		<div class="form-group">
			<label for="" class="col-sm-2 control-label">Google</label>
			<div class="col-sm-10">
				{{#if user.services.google.isConfigured}}
					Your account is connected.
					<a href="?disconnect=google" title="Revoke authorization of your Google account">Disconnect</a>
				{{else}}
					<a class="btn btn-social btn-google" href="/auth/google?target=/me" role="button">
						<span class="fa fa-google"></span>
						Sign in with Google
					</a>
				{{/if}}
			</div>
		</div>

		<button type="submit" class="btn btn-primary">Save profile</button>
	</form>
</div>
